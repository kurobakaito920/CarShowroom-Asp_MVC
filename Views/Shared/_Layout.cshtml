<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/slideshow.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="//cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />

</head>
<body>
    <div class="side-bar">
        <div class="logo--left">
            <img src="~/Images/logo.png" alt="">
        </div>
        <div class="side-bar__list">
            <div class="user-list">
                <p>
                    <a>@Html.ActionLink("Trang Chủ", "Index", "Home")</a>
                </p>
                <p>
                    <a>@Html.ActionLink("Sản Phẩm","Index","products")</a>
                </p>
                <p>
                    <a href="">Dịch vụ</a>
                </p>
                <p>
                    <a href="">Tin tức</a>
                </p>
            </div>
        </div>
    </div>
    <div class="main">
        <div class="header">
            @using (Html.BeginForm("Index", "Search", FormMethod.Get))
            {
            <div class="input-search">
                <input type="text" name="search" id="">
            </div>
            }
            <div class="icon">
                <div class="icon-theme">
                    <i class="fas fa-tshirt"></i>
                </div>
                <div class="login" onclick="showLogin()">
                    <div class="icon-login">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="login-register" id="login-register">
                        <a href="@Url.Action("Login2","homeAdmin", new { area = "Admin", controller = "homeAdmin" })" class="user-login">
                            <button>
                                <span>Đăng nhập</span>
                            </button>
                        </a>
                        <a href="#" class="user-register">
                            <button>
                                <span>Đăng ký</span>
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        <div class="footer"></div>
    </div>
    <script type="text/javascript" src="~/Scripts/index.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
